<UserControl x:Class="AcademiaDoZe.CadastroAlunosControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcademiaDoZe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Personal Information Section -->
        <Border BorderThickness="1" BorderBrush="#DDD" Background="White" CornerRadius="10" Padding="10" Margin="16,52,0,0" Width="368" HorizontalAlignment="Left" VerticalAlignment="Top" Height="308">
            <StackPanel>
                <Label Content="DADOS PESSOAIS" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="NOME" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="SOBRENOME" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="DATA DE NASCIMENTO" Width="162" VerticalAlignment="Center"/>
                    <DatePicker Width="141"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="EMAIL" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="TELEFONE" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="PLANO ATIVO" Width="100" VerticalAlignment="Center"/>
                    <ComboBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
                    <CheckBox Content="IRÁ REALIZAR NATAÇÃO?" Checked="CheckBox_Checked"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Address Information Section -->
        <Border BorderThickness="1" BorderBrush="#DDD" Background="White" CornerRadius="10" Padding="10" Margin="405,52,0,0" Width="368" HorizontalAlignment="Left" VerticalAlignment="Top" Height="308">
            <StackPanel>
                <Label Content="ENDEREÇO" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="RUA" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="NÚMERO" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="BAIRRO" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="CIDADE" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="ESTADO" Width="100" VerticalAlignment="Center"/>
                    <ComboBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="CEP" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
