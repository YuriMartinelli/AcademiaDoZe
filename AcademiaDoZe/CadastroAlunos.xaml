<Window x:Class="AcademiaDoZe.CadastroAlunos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Aluno" Height="700" Width="1000" Background="White">

    <Grid>
        <!-- Barra de Navegação -->

        <!-- Conteúdo Principal -->
        <StackPanel Margin="20,80,20,0" VerticalAlignment="Top" Height="633">
            <!-- Título -->
            <TextBlock Text="CADASTRO DE ALUNOS" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Dados Pessoais -->
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,0,0,20" Height="203" Width="956">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="325*"/>
                        <ColumnDefinition Width="144*"/>
                        <ColumnDefinition Width="469*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Título Dados Pessoais -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="DADOS PESSOAIS" 
                               FontSize="16" FontWeight="Bold" Foreground="#6A0DAD" Margin="0,0,0,10"/>

                    <!-- Nome e Sobrenome -->
                    <TextBox Grid.Column="0" Height="30" Margin="0,38,10,3" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                    <TextBox Grid.Column="2" Height="30" Margin="0,38,0,3" Grid.RowSpan="2"/>

                    <!-- Data de Nascimento e Telefone -->
                    <TextBox Grid.Row="2" Grid.Column="2" Height="30" Margin="0,18,0,16"/>

                    <!-- Email e Plano Ativo -->
                    <TextBox Grid.Row="3" Grid.Column="0" Height="30" Margin="0,8,10,-4" Grid.ColumnSpan="2" AutomationProperties.Name="email"/>
                    <ComboBox Grid.Row="3" Grid.Column="2" Height="30" Margin="0,8,0,-4">
                        <ComboBoxItem Content="Plano 1"/>
                        <ComboBoxItem Content="Plano 2"/>
                        <ComboBoxItem Content="Plano 3"/>
                    </ComboBox>
                    <Label Content="Nome" HorizontalAlignment="Left" Margin="0,15,0,0" VerticalAlignment="Top"/>
                    <Label Content="Sobrenome" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="0,12,0,0"/>
                    <DatePicker HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center" Grid.ColumnSpan="2" Height="30" Width="457"/>
                    <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,47,0,0" Grid.RowSpan="2" Grid.Row="2"/>
                    <Label Content="Data de nascimento" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-3,6,0,0" Grid.RowSpan="2" Grid.Row="1"/>
                    <Label HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="0,12,0,0" Grid.RowSpan="2" Grid.Row="1"/>
                    <Label Content="Telefone" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="0,10,0,0" Grid.RowSpan="2" Grid.Row="1"/>
                    <Label Content="Plano Ativo" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="2" Margin="0,48,0,0" Grid.RowSpan="2" Grid.Row="2"/>
                    <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,47,0,0" Grid.RowSpan="2" Grid.Row="2"/>
                </Grid>
            </Border>

            <!-- Seção Irá Realizar Natação -->
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Margin="0,0,0,20" Height="110">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
                        <TextBlock Text="IRÁ REALIZAR NATAÇÃO" FontSize="16" FontWeight="Bold" Margin="0,0,10,0"/>
                        <CheckBox VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Laudo Médico -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="LAUDO MÉDICO" VerticalAlignment="Center" Margin="0,10,10,5"/>
                    <Button Grid.Row="1" Grid.Column="1" Content="UPLOAD ARQUIVO" Background="#E0E0E0" HorizontalAlignment="Left" Margin="0,5"/>

                    <!-- Observações Médicas -->
                    <TextBox Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,55" TextWrapping="Wrap" AcceptsReturn="True" Background="#E0E0E0"/>
                </Grid>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="10" Padding="10" Height="155">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Título Endereço -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="ENDEREÇO" FontSize="16" FontWeight="Bold" Foreground="#6A0DAD" Margin="0,-6,0,16"/>

                    <!-- CEP, Estado, UF -->
                    <TextBox Grid.Row="1" Grid.Column="0" Height="30" Margin="0,10,10,30" Grid.RowSpan="2"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Height="30" Margin="0,10,10,30" Grid.RowSpan="2"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Height="30" Margin="312,10,0,30" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

                    <!-- Logradouro, Número, Complemento -->
                    <TextBox Grid.Row="2" Grid.Column="0" Height="30" Margin="0,59,10,-20"/>
                    <TextBox Grid.Row="2" Height="30" Margin="0,61,10,-22" Grid.Column="1"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Height="30" Margin="312,61,0,-22" Grid.ColumnSpan="2"/>
                    <Label Content="CEP" HorizontalAlignment="Left" Margin="0,16,0,0" VerticalAlignment="Top" Grid.RowSpan="3"/>
                    <Label Content="UF" HorizontalAlignment="Left" Margin="0,16,0,0" VerticalAlignment="Top" Grid.RowSpan="3" Grid.Column="1"/>
                    <Label Content="UF" HorizontalAlignment="Left" Margin="312,16,0,0" VerticalAlignment="Top" Grid.RowSpan="3" Grid.Column="1" Grid.ColumnSpan="2"/>
                    <Label Content="Logradouro" HorizontalAlignment="Left" Margin="0,36,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,2.752" Grid.Row="2"/>
                    <Label Content="Logradouro" HorizontalAlignment="Left" Margin="0,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.529,2.752" Grid.Row="2" Grid.Column="1"/>
                </Grid>
            </Border>

            <!-- Endereço -->

            <!-- Datas do Contrato -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <StackPanel/>
                <StackPanel Margin="40,0,0,0"/>
            </StackPanel>
            <Button Content="Button"/>
        </StackPanel>
        <Rectangle x:Name="rectangle" HorizontalAlignment="Center" Height="59" Stroke="White" VerticalAlignment="Top" Width="999" OpacityMask="#FF7100FF" Fill="#FF0090FF"/>
        <Image Margin="947,18,13,643" Source="/Assets/Hamburguer.png" Stretch="Fill"/>
        <Image Margin="189,14,133,639" Source="/Assets/Menu.png" Stretch="Fill"/>
        <Image Margin="189,50,194,603" Source="/Assets/Menu.png" Stretch="Fill"/>
        <Image Margin="10,4,911,654" Source="/Assets/SEU ZÉ.png" Stretch="Fill"/>
        <Image Margin="16,37,917,634" Source="/Assets/FIT CLUB.png" Stretch="Fill" RenderTransformOrigin="-0.045,-0.662"/>
    </Grid>
</Window>
