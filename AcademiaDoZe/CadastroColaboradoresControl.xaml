<UserControl x:Class="AcademiaDoZe.CadastroColaboradoresControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AcademiaDoZe"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- Personal Information Section -->
        <Border BorderThickness="1" BorderBrush="#DDD" Background="White" CornerRadius="10" Padding="10" Margin="16,52,0,0" Width="368" HorizontalAlignment="Left" VerticalAlignment="Top" Height="286">
            <StackPanel>
                <Label Content="DADOS PESSOAIS" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="NOME" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="SOBRENOME" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="DATA DE NASCIMENTO" Width="162" VerticalAlignment="Center"/>
                    <DatePicker Width="141"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="EMAIL" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="TELEFONE" Width="100" VerticalAlignment="Center"/>
                    <TextBox Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal"  Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <Border BorderThickness="1" BorderBrush="#DDD" Background="White" CornerRadius="10" Padding="10" Margin="400,52,0,0" Width="368" HorizontalAlignment="Left" VerticalAlignment="Top" Height="286">
            <StackPanel>
                <Label Content="DADOS PROFISSIONAIS" FontWeight="Bold" FontSize="16" Foreground="#333"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="DATA DE ADMISSÃO" Width="162" VerticalAlignment="Center"/>
                    <DatePicker Width="141"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0"/>
                <StackPanel Orientation="Horizontal"  Margin="0,10,0,0"/>
                <StackPanel Height="65" Width="78" Background="WhiteSmoke" HorizontalAlignment="Left">
                    <CheckBox Content="Estágio" Checked="CheckBox_Checked" Height="15" Margin="5,15,0,10"/>
                    <CheckBox Content="CLT" Checked="CheckBox_Checked" Height="15" Margin="5,0,0,0"/>
                </StackPanel>
                <StackPanel Height="95" Width="345" Background="WhiteSmoke" HorizontalAlignment="Left" Margin="0,0,0,50" Orientation="Horizontal">
                    <CheckBox Content="Administrador" Checked="CheckBox_Checked" Height="15" Margin="5,0,0,0"/>
                    <CheckBox Content="Atendente" Checked="CheckBox_Checked" Height="15" Margin="30,0,0,0"/>
                    <CheckBox Content="Instrutor" Checked="CheckBox_Checked" Height="15" Margin="32,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>

</UserControl>
